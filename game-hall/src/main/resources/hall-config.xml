<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean class="com.roje.game.core.server.BaseInfo" id="hallInfo">
        <property name="type">
            <value type="com.roje.game.core.server.ServerType">Hall</value>
        </property>
        <property name="ip" value="${hall.server.ip}"/>
        <property name="name" value="${hall.server.name}"/>
        <property name="port" value="${hall.server.port}"/>
        <property name="httpPort" value="${hall.server.httpPort}"/>
        <property name="url" value="${hall.server.url}"/>
        <property name="versionCode" value="${hall.server.version.code}"/>
        <property name="maxUserCount" value="${hall.server.maxUserCount}"/>
        <property name="clientVersionCode" value="${hall.server.client.version.code}"/>
        <property name="state">
            <value type="com.roje.game.core.server.ServerState">NORMAL</value>
        </property>
    </bean>
    <bean class="com.roje.game.core.config.ThreadConfig" id="threadConfig">
        <property name="ioCapacity" value="${io.capacity}"/>
        <property name="ioCorePoolSize" value="${io.corePoolSize}"/>
        <property name="ioKeepAliveTime" value="${io.keepAliveTime}"/>
        <property name="ioMaximumPoolSize" value="${io.maximumPoolSize}"/>
        <property name="syncName" value="${sync.name}"/>
        <property name="syncTimeInterval" value="${sync.timeInterval}"/>
        <property name="syncCommandSize" value="${sync.commandSize}"/>
    </bean>
    <!--连接集群的客户端-->
    <bean id="hallToClusterClientConfig" class="com.roje.game.core.config.ClientConfig">
        <property name="host" value="${hall.cluster.client.connect.ip}"/>
        <property name="port" value="${hall.cluster.client.connect.port}"/>
        <property name="soLinger" value="${hall.cluster.client.soLinger}"/>
        <property name="connToType">
            <value type="com.roje.game.core.server.ServerType">Cluster</value>
        </property>
        <property name="readerIdleTime" value="${hall.cluster.client.readerIdleTime}"/>
        <property name="writerIdleTime" value="${hall.cluster.client.writerIdleTime}"/>
        <property name="allIdleTime" value="${hall.cluster.client.allIdleTime}"/>
        <property name="tcpNoDelay" value="${hall.cluster.client.tcpNoDelay}"/>
        <property name="reconnectTime" value="${hall.cluster.client.reconnectTime}"/>

        <property name="connectTimeout" value="${hall.cluster.client.connectTimeout}"/>
    </bean>
    <!--连接网关的客户端-->
    <bean class="com.roje.game.core.config.ClientConfig" id="hallToGateClientConfig">
        <property name="soLinger" value="${hall.gate.client.soLinger}"/>
        <property name="connToType">
            <value type="com.roje.game.core.server.ServerType">Gate</value>
        </property>
        <property name="readerIdleTime" value="${hall.gate.client.readerIdleTime}"/>
        <property name="writerIdleTime" value="${hall.gate.client.writerIdleTime}"/>
        <property name="allIdleTime" value="${hall.gate.client.allIdleTime}"/>
        <property name="tcpNoDelay" value="${hall.gate.client.tcpNoDelay}"/>
        <property name="reconnectTime" value="${hall.gate.client.reconnectTime}"/>

        <property name="connectTimeout" value="${hall.gate.client.connectTimeout}"/>
    </bean>
</beans>