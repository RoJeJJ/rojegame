<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <context:property-placeholder location="classpath:*.properties"/>
    <import resource="hall-config.xml"/>
    <bean id="messageDispatcher" class="com.roje.game.core.dispatcher.MessageDispatcher"/>
    <bean class="com.roje.game.hall.manager.HallUserManager" id="hallUserManager"/>
    <bean class="com.roje.game.core.netty.NettyTcpClient" name="hallToClusterNettyTcpClient">
        <constructor-arg name="clientConfig" ref="hallToClusterClientConfig"/>
        <constructor-arg name="initializer" ref="hallToClusterClientChannelInitializer"/>
    </bean>
    <bean class="com.roje.game.core.netty.NettyTcpClient" name="hallToGateNettyTcpClient">
        <constructor-arg name="clientConfig" ref="hallToGateClientConfig"/>
        <constructor-arg name="initializer" ref="hallToGateClientChannelInitializer"/>
    </bean>
    <bean class="com.roje.game.hall.client.HallToClusterTcpClient" id="hallClusterTcpClient">
        <constructor-arg name="tcpClient" ref="hallToClusterNettyTcpClient"/>
    </bean>
    <bean class="com.roje.game.core.netty.channel.initializer.DefaultClientChannelInitializer" id="hallToClusterClientChannelInitializer">
        <constructor-arg name="clientConfig" ref="hallToClusterClientConfig"/>
        <property name="handlers">
            <list>
                <bean class="com.roje.game.core.netty.channel.handler.DefaultToClusterTcpClientChannelInBoundHandler">
                    <constructor-arg name="containUid" value="false"/>
                    <constructor-arg name="dispatcher" ref="messageDispatcher"/>
                    <constructor-arg name="service" ref="hallClusterTcpClient"/>
                    <property name="userManager" ref="hallUserManager"/>
                </bean>
            </list>
        </property>
    </bean>
    <bean class="com.roje.game.core.netty.channel.initializer.DefaultClientChannelInitializer" id="hallToGateClientChannelInitializer">
        <constructor-arg name="clientConfig" ref="hallToGateClientConfig"/>
        <property name="handlers">
            <list>
                <bean class="com.roje.game.core.netty.channel.handler.DefaultInBoundHandler" id="hallToGateClientChannelInBoundHandler">
                    <constructor-arg name="containUid" value="true"/>
                    <constructor-arg name="service" ref="hallToGateTcpClient"/>
                    <constructor-arg name="dispatcher" ref="messageDispatcher"/>
                </bean>
            </list>
        </property>
    </bean>
    <bean class="com.roje.game.hall.client.HallToGateTcpClient" id="hallToGateTcpClient">
        <constructor-arg name="tcpClient" ref="hallToGateNettyTcpClient"/>
        <constructor-arg name="threadConfig" ref="threadConfig"/>
    </bean>

    <!--消息处理-->
    <bean class="com.roje.game.hall.processor.cluster.ServerRegRespProcessor" id="serverRegRespProcessor" init-method="register">
        <property name="dispatcher" ref="messageDispatcher"/>
        <property name="hallInfo" ref="hallInfo"/>
        <property name="hallToGateTcpClient" ref="hallToGateTcpClient"/>
    </bean>
</beans>